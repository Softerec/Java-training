SELECT I.SUMMARY AS TASKNAME, IL.NAME AS LISTNAME
FROM ISSUES I JOIN ISSUESLISTS IL ON IL.ID = I.ISSUESLIST_ID;

SELECT I.SUMMARY AS TASKNAME, U.ID, U.LASTNAME, U.FIRSTNAME
FROM ISSUES I JOIN USERS U ON U.ID = I.USER_ID_ASSIGNEDTO

SELECT COUNT(*) AS AMOUNTOFTASKS, U.ID, U.LASTNAME, U.FIRSTNAME
FROM ISSUES I JOIN USERS U ON U.ID = I.USER_ID_ASSIGNEDTO
GROUP BY U.ID
HAVING COUNT(*) > 1;
